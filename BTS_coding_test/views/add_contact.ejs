<form  class="container mt-3" style="width: 30%;" method="post" action="/contact">
    <div class="form-floating mb-3">
    <h1> Form Add Data </h1>
    
    
        <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <ul>
                <% errors.forEach(error => { %>
                   <li><%= error.msg %> </li>
                <% }) %>
              </ul>
            </div>
           <% } %>
        
    
    <br><h5>Your username:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="name" name="name" aria-describedby="nama_anda" placeholder="Enter your name">
    </div>

    <div class="form-floating">
        <h5>Password:</h5>
            <label for="exampleInputPassword1"></label>
            <input type="text" class="form-control" id="password" name="password" placeholder="your password">
            
    </div>

    <div class="form-floating">
    <h5>Your Email:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="email_anda" placeholder="Enter your email">
        
    </div>
    
    <br><h5>Your Phone:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="phone" name="phone" aria-describedby="phone" placeholder="Enter your phone">
    </div>

    <br><h5>Your Country:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="country" name="country" aria-describedby="country" placeholder="Enter your Country">
    </div>

    <br><h5>Your City:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="city" name="city" aria-describedby="city" placeholder="Enter your city">
    </div>

    <br><h5>Your Postcode:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="postcode" name="postcode" aria-describedby="postcode" placeholder="Enter your postcode">
    </div>
    <br><h5>Your name:</h5>
    <label for="exampleInputEmail1"></label>
    <input type="text" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Enter your name">
</div>

<br><h5>Your Address:</h5>
        <label for="exampleInputEmail1"></label>
        <input type="text" class="form-control" id="address" name="address" aria-describedby="address" placeholder="Enter your address">
    </div>

    <p><br> <button type="submit" class="btn btn-outline-dark">Submit</button> </p>
</form>


